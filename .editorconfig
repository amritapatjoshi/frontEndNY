# Define and maintain consistent
# coding styles between different editors and IDEs

# Top-most EditorConfig file
root = true

# Applies to all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Set the coding style for specific file types or directories
[*.js]
indent_size = 2

[*.css]
indent_size = 2

[*.tsx]
indent_size = 2
